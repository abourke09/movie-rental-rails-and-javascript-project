<table>
  <tr>
    <th>Title</th>
    <th>Rating</th>
    <th>Length</th>
    <th>Lead Actor</th>
  </tr>

  <% @movies.each do |movie| %>
    <tr>
      <td><%= link_to movie.title, movie_path(movie.id) %></td>
      <td><%= movie.rating %></td>
      <td><%= movie.length %> minutes</td>
      <td><%= movie.lead_actor %></td>
    </tr>
  <% end %>

</table>
