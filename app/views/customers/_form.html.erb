<% if @customer.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this sign up from being submitted:</h2>

    <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@customer) do |f| %>

  <%= f.label :name, "Name:" %> <br>
  <%= f.text_field :name %>
  <br></br>

  <%= f.label :age, "Age:" %> <br>
  <%= f.number_field :age %>
  <br></br>

  <%= f.label :email, "Email:" %><br>
  <%= f.text_field :email %>
  <br></br>

  <%= f.label :password, "Password:" %><br>
  <%= f.text_field :password %>
  <br></br>

  <%= f.submit %>
<% end %>
