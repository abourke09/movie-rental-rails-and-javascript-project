<h1>Please Sign Up</h1>
<%= form_for @customer, :url => url_for(:controller => 'customers', :action => 'create') do |f| %>

  <%= f.label :name, "Name:" %> <br>
  <%= f.text_field :name %>
  <br></br>

  <%= f.label :age, "Age:" %> <br>
  <%= f.number_field :age %>
  <br></br>

  <%= f.label :email, "Email:" %><br>
  <%= f.text_field :email %>
  <br></br>

  <%= f.label :password, "Password:" %><br>
  <%= f.text_field :password %>
  <br></br>

  <input type=submit value='Sign Up'>
<% end %>
