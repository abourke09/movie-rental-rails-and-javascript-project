<h1>Please Log In</h1>
<%= form_for @customer, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>

  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %>
  <br></br>

  <%= f.label :password, "Password:" %>
  <%= f.text_field :password %>
  <br></br>

  <input type=submit value='Log In'>
<% end %>

<br></br>
<p>Alternatively, <%= link_to('log in with Facebook', '/auth/facebook') %></p>
